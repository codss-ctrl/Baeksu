<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Test">
	<select id="select_list"> 
		select
			notice_seq, 
			notice_title, 
			notice_content, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id,
			rownum rnum
 		from 
 			notice
 		order by notice_seq desc	
	</select>
	<select id="select">
		select  
			notice_seq, 
			notice_title, 
			notice_content, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id
 		from 
 			notice
 		where
 			notice_seq = :1 
	</select>	
	
	<update id="insert">
		insert into notice 
		(
			notice_seq, 
			notice_title, 
			notice_content, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id
		) 
		values
		(
			notice_seq.nextval,
			:1, 
			:2, 
			to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			:3, 
			to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			:4
		)
	</update>
	
	<update id="update">
		update
			notice 
		set 
			notice_title			=:1, 
			notice_content				=:2, 
			up_date				= to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			up_user_id			=:3
		where 
			notice_seq=:4
	</update>

	<update id="delete">
		delete from notice 
		where 
			notice_seq= :1
	</update>
</mapper>