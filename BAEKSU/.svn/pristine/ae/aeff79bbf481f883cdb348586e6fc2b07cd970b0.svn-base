<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Test">

	<select id="select_list_admin">
     select 
			board_seq, 
			board_title, 
			board_content, 
			attach_file, 
			attach_path, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id,
     		rownum rnum
      from 
             board 
      where 
      		1 = 1
      and   board_title like '%'||: 1||'%'
      order by board_seq desc
             
   </select>
	
   <select id="select_all_list">
     select 
			board_seq, 
			board_title, 
			board_content, 
			attach_file, 
			attach_path, 
			in_date,
			in_user_id
      from 
             board  
      order by board_seq desc
   </select>
	
	
   <select id="select_list">
     select 
			board_seq, 
			board_title, 
			board_content, 
			attach_file, 
			attach_path, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id,
     		rownum rnum
      from 
             board 
      where
      		in_user_id =: 1
      and   board_title like '%'||: 2||'%' 
      order by board_seq desc
   </select>
	
	<select id="select">
		SELECT 
			board_seq, 
			board_title, 
			board_content, 
			attach_file, 
			attach_path, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id,
			board_pass
			
 		from 
 			board
 		where
 			board_seq =: 1
	</select>
	
	<update id="insert">
		insert into board 
		(
			board_seq, 
			board_title, 
			board_content, 
			attach_file, 
			attach_path, 
			in_date, 
			in_user_id, 
			up_date, 
			up_user_id,
			board_pass
		) 
		values
		(
			BOARD_SEQ.nextval,
			:1, 
			:2, 
			:3, 
			:4, 
			to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			:5, 
			to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			:6,
			:7
		)
	</update>
	
	<update id="update">
		update 
			board 
		set 
			board_title			=:1, 
			board_content		=:2, 
			attach_file			=:3, 
			attach_path			=:4, 
			up_date				= to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			up_user_id			=:5
		where 
			board_seq=:6
	</update>
	
	<update id="del_img">
		update 
			board 
		set 
			attach_file		= '', 
			attach_path		= '',
			up_date			= to_char(sysdate, 'YYYYMMDD.HH24MISS') 
			
		where 
			board_seq=:1
		and
			board_pass=:2	
	</update>
	
	<update id="delete">
		delete 
		from 
			board 
		where 
			board_seq = :1

	</update>
	
	
</mapper>