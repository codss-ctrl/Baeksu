{% extends 'layout.html' %}
<meta charset="UTF-8">
{% block content %}

<script type="text/javascript">
	$(document).ready(function(){

	});

	function fn_list(){
		location.href="after_list"
	}
	function fn_add(){
		document.frm.submit();
	}
	</script>
	
	
	<style>

	#after_add{
		width : 80%;
		margin: 200px auto 0px;
		border-collapse: collapse;
		border: 1px solid black;
	}
	#after_title {
		width: 100%;
	}
	.after_set_button {
		font-size: 12px;
		cursor: pointer;
		background-color: #269463;
		color: white;
		border: 1px solid #269463;
	}
	
	#after_file {
		font-size: 12px;
	}

</style>


<form name="frm" action="after_addact" method="post" enctype="multipart/form-data">
<table id="after_add" border="1px">

	<tr>
		<th>제목</th>
		<td><input type="text" id="after_title" name="after_title" placeholder="제목입력"> </td>
	</tr>
	<tr>
		<th>내용</th>
		<td>
			<textarea rows="15" cols="80" name="after_content" placeholder="면접일 ,기업명을 필수로 기재해주세요."></textarea>
		</td>
	</tr>
	<tr>
		<th>첨부파일</th>
		<td>
			<input id="after_file" type="file" name="file"/> 
		</td>
	</tr>
	<tr>
		<th colspan="2">
			<input type="button" class="after_set_button" value="작성완료" onclick="fn_add()"/>
			<input type="button" class="after_set_button" value="목록으로" onclick="fn_list()"/>
		</th> 
	</tr>
</table>
</form>

{% endblock %} 